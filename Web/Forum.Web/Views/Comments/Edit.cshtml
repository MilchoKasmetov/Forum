@using Forum.Web.ViewModels.Comments
@model EditCommentsInputModel

<h1>Edit comment</h1>


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3 text-white">
                <label asp-for="@Model.Content" class="form-label">Content</label>
                <input asp-for="@Model.Content" class="form-control" aria-required="true" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input id="btnSubmit" class="btn btn-primary" type="submit" value="Update" />
            </div>
        </form>
    </div>
</div>